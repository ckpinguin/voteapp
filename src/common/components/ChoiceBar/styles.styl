.choiceBar
    position relative
    margin-bottom 24px
    height 40px
    border 3px solid #ffb273
    border-radius 10px
    background-color #5ccccc

.choiceBar:hover
    border 3px solid #ff9640
    border-radius 10px
    cursor pointer

.choiceBar:hover .progress
    background-color #ff9640
    cursor pointer

.choiceBar:hover .choiceBarBadge
    border 1px solid #5ccccc
    background-color #ff9640
    color #a60000

.choiceBarTitle
    position absolute
    top 50%
    left 8px
    margin-top -11px
    font-size 16px

.choiceBarBadge
    position absolute
    top 50%
    right 16px
    margin-top -16px
    padding 4px 8px
    width 50px
    height 24px
    border-radius 10px
    background-color white
    text-align center
    font-size 16px

.progress
    position absolute
    top 0
    left 0
    display inline-block
    height 100%
    background-color #ffb273
    white-space nowrap
