.row {
    margin-bottom: 10px;
    padding: 10px 20px;
    border-radius: 10px;
    background-color: white;
    color: #16b122;
}

.row.selectable:hover {
    background-color: #FFB273;
    cursor: pointer;
}

.row.selectable:hover .badge {
    background-color: white;
}

.row.selectable:hover .title {
    border-bottom: 1px solid white;
}

.votesRow {
    margin-left: 8.33%;
    margin-right: 8.33%;
}

.votesRow>p {
	font-size: 18px;
	padding: 0;
	margin: 0;
}

.badge {
    float: right;
    padding: 4px 8px;
    min-width: 12%;
    border-radius: 10px;
    background-color: #ffb273;
    text-align: center;
    font-size: 60%;
}

.title {
    margin-bottom: 5px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: normal;
    font-size: 36px;
}

.emphasis {
    font-style: italic;
    font-family: 'Lora', serif;
    text-transform: none;
}
