/* BEGIN OF GLOBAL STYLES */
body {
    // background $url_1 no-repeat
    font-weight: 600;
    font-family: $font_site;
}

a {
    color: inherit;
    text-decoration: none;
}

.header {
    margin: 0 0 20px 0;
    height: 46px;
    padding: 14px 14px 0 14px;
    color: white;
    background-color: #A60000;
    text-align: center;
    font-size: 18px;
    font-weight: 400;
    font-style: normal;
    text-transform: uppercase;
    letter-spacing: 4px;
}

.background {
    height: 100vh;
    background-color: #6fd2d2;
    width: 100%;
    min-height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    overflow: auto;
}

.main {
    margin: 0 auto;
    width: 90%;
    max-width: 1280px;
}

.alert {
    background-color: $navy_blue;
    color: red;
    font-weight: 900;
}

.emphasis {
    font-style: italic;
    font-family: 'Lora', serif;
    text-transform: none;
}

.root {
    padding: 20px 10px;
}
/* END OF GLOBAL STYLES */

// Quick reminder: ".class1 .class2" (space between) means: elements with
//                 class2 that are descendant of class1
//                 ".class1.class2" (no space between!) means: Elements with
//                 class1 AND class2

/* BEGIN OF COMPONENT STYLES */
.app-ChoiceBar {
    position: relative;
    margin-bottom: 24px;
    height: 40px;
    border: 3px solid #FFB273;
    border-radius: 10px;
    background-color: #5CCCCC;
    &:hover {
        border: 3px solid #FF9640;
        border-radius: 10px;
        cursor: pointer;
        & app-ChoiceBar-badge {
            border: 1px solid #5CCCCC;
            background-color: #FF9640;
            color: #A60000;
        }
        & app-ChoiceBar-progress {
            background-color: #FF9640;
            cursor: pointer;
        }
    }
    &-title {
        position: absolute;
        top: 50%;
        left: 8px;
        margin-top: -11px;
        font-size: 16px;
    }
    &-badge {
        position: absolute;
        top: 50%;
        right: 16px;
        margin-top: -16px;
        padding: 4px 8px;
        width: 50px;
        height: 24px;
        border-radius: 10px;
        background-color: white;
        text-align: center;
        font-size: 16px;
    }
    &-progress {
        position: absolute;
        top: 0;
        left: 0;
        display: inline-block;
        height: 100%;
        background-color: #FFB273;
        white-space: nowrap;
    }
}

.app-Layout {
    &-header {
        margin-bottom: 20px;
        padding: 14px 14px 0 14px;
        height: 46px;
        background-color #A60000;
        color: white;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-weight: 400;
        font-style: normal;
        font-size: 18px;
    }
    &-title {
        border-bottom: 1px solid white;
    }
    &-background {
        position: fixed;
        top: 0;
        left: 0;
        overflow: auto;
        min-height: 100%;
        width: 100%;
        height: 100vh;
        background-color: #6FD2D2;
    }
    &-main {
        margin: 0 auto;
        max-width: 1280px;
        width: 90%;
    }
}

.app-LoginController {
    margin-top: 20px;
    & input {
        font-size: 14px;
        border: 3px solid #FFB273;
        margin-bottom: 24px;
        background-color: #5CCCCC;
        padding-left: 10px;
        padding-right: 10px;
        width: 100%;
        height: 40px;
        box-sizing: border-box;
        border-radius: 10px;
        &:focus {
            color: #A60000;
            outline: 0;
        }
    }
    &-head {
        border-bottom: none;
        padding-bottom: 10px;
        margin-bottom: 10px;
    }
    &-title {
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: normal;
        font-size: 36px;
    }
    &-buttonBar {
        border-top: 1px solid #5CCCCC;
        padding-top: 15px;
    }
    &-button {
        display: inline-block;
        background-color: #5CCCCC;
        padding: 8px 12px 8px 12px;
        margin-right: 20px;
        text-align: center;
        border-radius: 10px;
        text-transform: uppercase;
        letter-spacing: 2px;
        cursor: pointer;
        &:hover {
            background-color: #FFB273;
        }
        &-disabled {
            color: #ff9640;
            cursor: auto;
            &:hover {
                background-color: #5CCCCC;
            }
        }
    }
}

